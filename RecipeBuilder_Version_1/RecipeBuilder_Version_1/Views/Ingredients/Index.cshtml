@model IEnumerable<RecipeBuilder_Version_1.Models.IngredientViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IngredientName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Unit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitQuantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Preparation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RecipeItem)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IngredientName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Item)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Unit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnitQuantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Preparation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RecipeItem)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IngredientID }) |
            @Html.ActionLink("Details", "Details", new { id=item.IngredientID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IngredientID })
        </td>
    </tr>
}

</table>
